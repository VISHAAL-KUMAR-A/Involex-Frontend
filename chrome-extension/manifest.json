{
  "manifest_version": 3,
  "name": "Involex Email Analyzer",
  "version": "1.0",
  "description": "AI-powered email analysis with Clio integration",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "https://app.clio.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://*.outlook.com/*",
        "https://*.office.com/*",
        "http://127.0.0.1:8000/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["auth-error.html"],
      "matches": ["http://127.0.0.1:8000/*"]
    }
  ]
} 